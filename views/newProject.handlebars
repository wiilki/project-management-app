<a href="/dashboard" type="button" class="btn btn-warning">Go back</a>

<h2>New Project:</h2>

<form class="new-project-form">

  <div class="mb-3">
    <label for="new-project-title" class="form-label">Title:</label>
    <input class="input form-control" name="new-project-title" type="text" value="{{project.title}}" id="title-box"/>
  </div>

  <div>
    <label for="new-project-description" class="form-label">Description:</label>
    <input class="textarea form-control" name="new-project-description" type="text" value="{{project.description}}" />
  </div>

  <div class="progress-date">
    <label for="new-project-progress" class="form-label">Progress:</label>
    <select name="new-project-progress" id="new-project-progress">
      <option value="In Progress">In Progress</option>
      <option value="Issues">Issues Found</option>
      <option value="In Review">In Review</option>
      <option value="Completed">Completed</option>
    </select>
  </div>

 <div class="progress-date">
    <label for="new-project-deadline" class="form-label">Deadline date: </label>
    <input type="date" name="new-project-deadline" id="new-project-deadline" />
  </div>

    <button class="btn btn-success new-project-btn" type="submit">Save</button>
</form>

<script src="/js/newProject.js"></script>