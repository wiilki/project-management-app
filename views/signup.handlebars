<section class='vh-100'>
  <div class='container-fluid h-custom'>
    <div class='row d-flex justify-content-center align-items-center vh-100'>
      <div class='col-md-9 col-lg-6 col-xl-5'>
        <img
          src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp'
          class='img-fluid'
          alt='Sample image'
        />
      </div>
      <div class='col-md-9 col-lg-6 col-xl-5'>
        <form class='signup-form'>

          <div class='divider d-flex align-items-center my-4'>
            <p class='text-center mx-3 mb-0 display-3'>Sign Up</p>
          </div>

          <!-- name -->
          <div class='form-outline mb-4'>
            <input
              type='text'
              id='name-signup'
              class='form-control form-control-lg'
              placeholder='Enter your name'
            />
            <label class='form-label' for='name-signup'>Your name</label>
          </div>

          <!-- Email input -->
          <div class='form-outline mb-4'>
            <input
              type='email'
              id='email-signup'
              class='form-control form-control-lg'
              placeholder='Enter a valid email address'
            />
            <label class='form-label' for='email-signup'>Email address</label>
          </div>

          <!-- Password input -->
          <div class='mb-3'>
            <input
              type='password'
              id='password-signup'
              class='form-control form-control-lg'
              placeholder='Enter password'
            />
            <label class='form-label' for='password-signup'>Password</label>
          </div>

          <div class='text-center text-lg-start mt-4 pt-2'>
            <button
              type='submit'
              class='btn btn-primary btn-lg'
              style='padding-left: 2.5rem; padding-right: 2.5rem;'
            >Sign Up</button>
          </div>

        </form>
      </div>
    </div>
  </div>
  <div
    class='d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary'
  >
    <!-- Copyright -->
    <div class='text-white text-center mb-3 mb-md-0'>
      Copyright Â© 2023. All rights reserved.
    </div>
    <!-- Copyright -->
  </div>
</section>

<script src='/js/signup.js'></script>